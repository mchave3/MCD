<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MCD Connectivity"
    Width="900"
    Height="520"
    WindowStartupLocation="CenterScreen"
    FontFamily="Segoe UI">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock FontSize="26" FontWeight="SemiBold" Text="Network connectivity" />
            <TextBlock FontSize="14" Opacity="0.75" Text="Connect to the network to download the latest content and start deployment." />
        </StackPanel>

        <Border Grid.Row="1" Padding="16" Background="#0A000000" CornerRadius="10">
            <StackPanel>
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Status" />
                <TextBlock x:Name="StatusText" Margin="0,8,0,0" FontSize="14" TextWrapping="Wrap" />

                <Separator Margin="0,16,0,16" />

                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Tips" />
                <TextBlock Margin="0,8,0,0" FontSize="14" TextWrapping="Wrap" Text="- Plug in an Ethernet cable if available\n- Use Wi-Fi if supported by your WinPE image\n- You can continue offline (USB fallback)" />
            </StackPanel>
        </Border>

        <DockPanel Grid.Row="2" Margin="0,16,0,0" LastChildFill="False">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="WifiButton" Width="160" Height="36" Margin="0,0,10,0" Content="Open Wi-Fi" />
                <Button x:Name="RetryButton" Width="160" Height="36" Content="Retry" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Width="160" Height="36" Margin="0,0,10,0" Content="Cancel" />
                <Button x:Name="ContinueButton" Width="160" Height="36" Content="Continue" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
